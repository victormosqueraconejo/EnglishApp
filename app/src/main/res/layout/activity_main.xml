<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primario"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/texto"
        android:layout_marginTop="75dp"
        android:textSize="45sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/englishapp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/secundario"
        android:text="@string/siguiente" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginVertical="100dp"
    >
        <ImageView
        android:id="@+id/ivFacebookLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/facebooklogo"
            android:layout_marginLeft="75dp"
        />
        <ImageView
            android:id="@+id/ivInstagramLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/intagramlogo"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/ivRedditLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/redditlogo"
            android:layout_marginLeft="50dp"
            />

    </LinearLayout>



</LinearLayout>