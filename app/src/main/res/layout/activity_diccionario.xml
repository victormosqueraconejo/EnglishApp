<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primario"
    tools:context=".Diccionario">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Diccionario de Palabras"
        android:textSize="48dp"
        android:textAlignment="center"
        android:layout_margin="25dp"
        />
    <Spinner
        android:id="@+id/spSeleccionIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ListView
            android:id="@+id/lvListaPalabras1"
            android:layout_width="200dp"
            android:layout_height="500dp"
            android:layout_gravity="start"
            />
        <ListView
            android:id="@+id/lvListaPalabras2"
            android:layout_width="200dp"
            android:layout_height="500dp"
            android:layout_gravity="end"
            />

    </LinearLayout>


    <Button
        android:id="@+id/btnCalificarDiccionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Califica este diccionario"
        android:backgroundTint="@color/secundario"
        android:layout_gravity="end"
        android:layout_margin="25dp"
        />




</LinearLayout>