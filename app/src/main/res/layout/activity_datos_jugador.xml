<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primario"
    tools:context=".DatosJugador">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="¡Bienvenido!"
        android:layout_marginTop="25dp"
        android:textSize="48dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor, ingresa los siguiente datos."
        android:textSize="26dp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/teclado"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cual es tu nombre?"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/etEntradaNombre"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Escribe tu nombre aqui."
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cual es tu apellido?"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/etEntradaApellido"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Escribe tu nombre aqui."
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cual es tu edad?:"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/etEntradaEdad"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Escribe tu nombre aqui."
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSiguiente3"
        android:text="Siguiente"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/secundario"
        />

</LinearLayout>